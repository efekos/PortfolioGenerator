{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "anyOf": [
        {
            "type":"object",
            "properties": {
                "day":{
                    "type":"integer"
                },
                "month":{
                    "type":"integer"
                },
                "year":{
                    "type":"integer"
                }
            },
            "required": ["day","month","year"]
        },
        {
            "type":"string",
            "minLength":10,
            "maxLength":10,
            "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"   
        }
    ],
    "examples": [
        {"day":9,"month":5,"year":2002},
        "2002-05-09"
    ]
}