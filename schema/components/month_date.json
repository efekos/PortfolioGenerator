{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "anyOf": [
        {
            "type":"object",
            "properties": {
                "month":{
                    "type":"integer"
                },
                "year":{
                    "type":"integer"
                }
            },
            "required": ["month","year"]
        },
        {
            "type":"string",
            "minLength":8,
            "maxLength":8,
            "pattern": "[0-9]{4}-[0-9]{2}"   
        }
    ],
    "examples": [
        {"month":5,"year":2002},
        "2002-05"
    ]
}