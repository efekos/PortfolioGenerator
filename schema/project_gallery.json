{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Project Gallery File",
    "description": "An array of gallery image objects.",
    "type":"array",
    "items": {
        "type":"object",
        "title": "Project Gallery Entry",
        "description": "An entry that contains information about a gallery image.",
        "required": ["name","description","file"],
        "properties": {
            "name":{
                "type":"string",
                "title": "Image Name",
                "description": "The name of this image."
            },
            "file":{
                "type":"string",
                "title": "Image Path",
                "description": "Path to the image under 'assets' folder."
            },
            "description":{
                "type":"string",
                "title": "Image Description",
                "description": "Description of this image."
            }
        }
    }
}