{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "anyOf": [
    {
      "type":"string",
      "pattern": "#(?:[A-Fa-f0-9]{3}){1,2}\\b",
      "minLength":4,
      "maxLength": 7
    },
    {
      "type":"object",
      "required": ["r","g","b"],
      "properties": {
        "r":{
          "type":"number",
          "title": "Red",
          "description": "Red value of this color",
          "minimum": 0,
          "maximum": 255
        },
        "g":{
          "type":"number",
          "title": "Green",
          "description": "Green value of this color",
          "minimum": 0,
          "maximum": 255
        },
        "b":{
          "type":"number",
          "title": "Blue",
          "description": "Green value of this color",
          "minimum": 0,
          "maximum": 255
        }
      }
    }
  ]
}